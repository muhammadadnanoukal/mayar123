<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_template_demo_employee_hr" model="mail.template">
            <field name="name">Email for expired dates</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="subject">Dates about to Expire</field>
            <field name="partner_to">{{ object.id }}</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="email_to">{{ object.work_email }}</field>
            <field name="email_cc">{{ (user.email_formatted or object.user_id.email_formatted) }}</field>
            <field name="description">Sent to employees who their data is about to be expired</field>
            <field name="body_html" type="html">
                <div>
                    <div>
                        Dear <t t-esc="object.name"/>,
                    </div>
                    <br/>
                    <div>
                        Some of your data is about to be expired:
                    </div>
                    <div style="margin-right: 10px;">
                        <div>1- Iqama expiration date:
                            <t t-esc="object.iqama_expiry_date"/>
                        </div>
                        <div>2- Passport expiration date:
                            <t t-esc="object.passport_expiry"/>
                        </div>
                        <div>3- VISA expiration date:
                            <t t-esc="object.visa_expire"/>
                        </div>
                        <div>4- Work Permit expiration date:
                            <t t-esc="object.work_permit_expiration_date"/>
                        </div>
                    </div>
                    <br/>
                    for more information please contact with us!
                    <br/>
                    <br/>
                    Best Regards,
                    <br/>
                </div>
            </field>
        </record>

    </data>
</odoo>