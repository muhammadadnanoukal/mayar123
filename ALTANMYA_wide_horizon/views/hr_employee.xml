<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wide_horizon_hr_employee_inherited" model="ir.ui.view">
        <field name="name">hr.employee.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <field name="visa_no" position="after">
                <field name="visa_attachment"/>
            </field>

            <field name="identification_id" position="after">
                <field name="iqama_issue_date"/>
                <field name="iqama_expiry_date"/>
                <field name="iqama_attachment"/>
            </field>

            <field name="passport_id" position="after">
                <field name="passport_expiry"/>
                <field name="passport_attachment"/>
                <field name="border_number"/>
                <field name="sponsorship_number"/>
            </field>

        </field>
    </record>
</odoo>